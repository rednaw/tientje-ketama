generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recording {
  id               String   @id @default(uuid())
  originalFilename String
  format           String
  fileSizeBytes    BigInt
  uploadedAt      DateTime @default(now())

  @@index([uploadedAt])
}
